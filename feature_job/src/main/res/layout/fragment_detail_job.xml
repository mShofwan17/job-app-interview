<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FAFAFA"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_detail_job"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btn_apply"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_apply"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/_16dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_img_job"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:id="@+id/img_job"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/gotoh" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_company"
                    app:layout_constraintTop_toTopOf="@+id/cv_img_job"
                    app:layout_constraintStart_toEndOf="@+id/cv_img_job"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/black"
                    tools:text="@string/lbl_dummy_job"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_location"
                    app:layout_constraintTop_toBottomOf="@+id/txt_company"
                    app:layout_constraintStart_toStartOf="@id/txt_company"
                    app:layout_constraintEnd_toEndOf="@id/txt_company"
                    android:layout_marginTop="@dimen/_4dp"
                    android:textColor="@color/teal_700"
                    tools:text="@string/lbl_dummy_company"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_website"
                    app:layout_constraintTop_toBottomOf="@+id/txt_location"
                    app:layout_constraintStart_toStartOf="@id/txt_company"
                    app:layout_constraintEnd_toEndOf="@id/txt_company"
                    android:layout_marginTop="@dimen/_4dp"
                    android:text="@string/lbl_goto_web"
                    android:textColor="@android:color/holo_blue_dark"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layout_spesification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_company"
                android:layout_marginTop="@dimen/_16dp"
                android:padding="@dimen/_14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/cv_img_job"
                    app:layout_constraintStart_toEndOf="@+id/cv_img_job"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_16sp"
                    android:text="@string/lbl_title"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_title"
                    app:layout_constraintTop_toBottomOf="@+id/txt_job"
                    app:layout_constraintStart_toStartOf="@id/txt_job"
                    app:layout_constraintEnd_toEndOf="@id/txt_job"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:textColor="@color/black"
                    tools:text="@string/lbl_dummy_company"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/cv_img_job"
                    app:layout_constraintStart_toEndOf="@+id/cv_img_job"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_16sp"
                    android:text="@string/lbl_fulltime"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_fulltime"
                    app:layout_constraintTop_toBottomOf="@+id/txt_job"
                    app:layout_constraintStart_toStartOf="@id/txt_job"
                    app:layout_constraintEnd_toEndOf="@id/txt_job"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:textColor="@color/black"
                    tools:text="@string/lbl_dummy_company"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/cv_img_job"
                    app:layout_constraintStart_toEndOf="@+id/cv_img_job"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_16sp"
                    android:text="@string/lbl_desc"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_desc"
                    app:layout_constraintTop_toBottomOf="@+id/txt_job"
                    app:layout_constraintStart_toStartOf="@id/txt_job"
                    app:layout_constraintEnd_toEndOf="@id/txt_job"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:textColor="@color/black"
                    tools:text="@string/lbl_dummy_company"
                    />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_36dp"
        android:layout_marginStart="@dimen/_36dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:background="@drawable/bg_button_primary"
        android:textColor="@color/white"
        android:text="@string/lbl_apply"
        />

</androidx.constraintlayout.widget.ConstraintLayout>